@using static ComputerEquipmentMS.Views.CommonFuncs.Formatter
@model ComputerEquipmentMS.ViewModels.ComputerConfigurationsViewModel

@{
    var configurations = Model;
}

<h1 class="display-4">Компьютерные сборки</h1>

<div name="computerConfigurations">
    <div style="text-align: right;">
        <form method="get" asp-controller="Configurations" asp-action="Create">
            <button type="submit" class="btn btn-outline-dark">Добавить</button>
        </form>
    </div>
    <table class="table table-hover">
        <thread>
            <tr>
                <th>Название</th>
                <th>Гарантийный период</th>
                <th>Выручка</th>
                <th/>
            </tr>
        </thread>
        @foreach (var configuration in configurations)
        {
            <tr>
                <td>@configuration.Name</td>
                <td>@FormatPeriodToString(configuration.WarrantyPeriod)</td>
                <td>@configuration.Margin</td>
                <td>
                    <form asp-controller="Configurations" asp-action="Details" asp-route-id="@configuration.Id" method="get">
                        <button type="submit" class="btn btn-outline-secondary btn-sm">Подробнее</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>