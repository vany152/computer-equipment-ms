@using static ComputerEquipmentMS.Views.Common.Constants
@model ComputerEquipmentMS.ViewModels.Customers.CustomerDetailsViewModel

<h1 class="display-4">Регистрация покупателя</h1>

<div>
    <form asp-controller="Customers" method="post">
        <div style="margin-top: 20px" class="form-floating mb-3">
            <input type="text" id="nameInput" asp-for="Name" class="form-control" placeholder="Имя" required pattern="@DenyOnlySpacesOrSpaceFramesStringsRegex">
            <label for="nameInput">Имя</label>
        </div>
        
        <div style="margin-top: 20px; display: flex;" name="contacts">
            <div name="phone" style="width: 100%; margin-right: 10px" class="form-floating mb-3">
                <input type="tel" id="phoneInput" asp-for="Phone" class="form-control" placeholder="+7-800-555-3535" pattern="^\+\d{1,3}-\d{3}-\d{3}-\d{4}$">
                <label for="phoneInput">Телефон</label>
            </div>
            <div name="email" style="width: 100%; margin-left: 10px" class="form-floating mb-3">
                <input type="email" id="emailInput" asp-for="Email" class="form-control" placeholder="example@gmail.com" pattern="@DenyOnlySpacesOrSpaceFramesStringsRegex">
                <label for="emailInput">Email</label>
            </div>
        </div>
        
        <div style="display: flex; width: 100%">
            <button type="submit" class="btn btn-light" style="flex-grow: 1; flex-basis: 0">Сохранить</button>
            <button type="button" onclick="history.back()" class="btn btn-light" style="flex-grow: 1; flex-basis: 0; margin-left: 10px">Отменить</button>
        </div>
    </form>
</div>
