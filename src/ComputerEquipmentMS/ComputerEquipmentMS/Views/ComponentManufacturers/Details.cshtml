@using ComputerEquipmentMS.ViewModels.Components
@model ComputerEquipmentMS.ViewModels.ComponentCategories.ComponentCategoryViewModel

@{
    var manufacturer = Model;

    var components = (ComponentsViewModel) ViewBag.Components;
}

@* <h2 class="display-4">@manufacturer.Name</h2> *@

<div>
    <h2 class="display-6">Компоненты от производителя "@manufacturer.Name"</h2>
    
    <table class="table table-hover">
        <thread>
            <tr>
                <th>Название</th>
                <th>Категория</th>
                <th>Спецификации</th>
                <th>Стоимость закупки у производителя</th>
                <th>Гарантия производителя</th>
            </tr>
        </thread>
        @foreach (var component in components)
        {
            <tr>
                <td>@component.Name</td>
                <td>@component.ComponentCategory</td>
                <td style="white-space: pre">@component.Specifications</td>
                <td>@component.Cost</td>
                <td>@component.WarrantyPeriodMonths мес.</td>
            </tr>
        }
    </table>
    <form method="get" asp-controller="ComponentManufacturers" asp-action="Index" style="display: flex; width: 100%">
        <button type="submit" class="btn btn-light" style="flex-grow: 1; flex-basis: 0">Все производители комплектующих</button>
        <button type="button" onclick="history.back()" class="btn btn-light" style="flex-grow: 1; margin-left: 1%; flex-basis: 0">Назад</button>
    </form>
</div>
